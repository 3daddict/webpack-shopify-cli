{%- case media.media_type -%}
  {%- when 'image' -%}
    <img 
      class="object-cover w-full h-full" 
      src="{{ media | image_url: width: '480' }}" 
      alt="{{ media.preview_image.alt }}"
      width="480"
      height="480"
      loading="lazy"
      >
  {%- when 'external_video' -%}
    {{ media | external_video_tag: class: 'object-cover w-full h-80' }}
  {%- when 'video' -%}
    {{ media | video_tag: controls: true, class: 'object-cover w-full h-80' }}
  {%- when 'model' -%}
    {{ media | model_viewer_tag: class: 'object-cover w-full h-80' }}
  {%- else -%}
    {{ media | media_tag: class: 'object-cover w-full h-80' }}
{%- endcase -%}