<div class="flex flex-col items-center my-8">
  <h1 class="text-3xl font-medium">
    {{ section.settings.title }}
  </h1>
  <div class="max-w-6xl mx-auto my-3">
    <div class="grid grid-cols-1 gap-3 md:grid-cols-3">
      {%- for collection in collections -%}
        {%- if collection.all_products_count > 0 -%}
          <div class="w-full px-3 py-6">
            <div class="overflow-hidden bg-white border">
              <a href="{{ collection.url }}">
                <div class="overflow-hidden h-80">
                  {%- if collection.featured_image != blank -%}
                    {%- assign collection_image = collection.featured_image -%}
                  {%- else -%}
                    {%- assign collection_image = collection.products.first.image -%}
                  {%- endif -%}
                  <img 
                    class="object-cover w-full h-full transition duration-1000 ease-in-out transform hover:scale-105" 
                    src="{{ collection_image | image_url: width: 240 }}" 
                    alt="{{ collection.title | escape }}"
                    width="240"
                    height="240" 
                    loading="lazy"
                  >
                </div>
              </a>
              <div class="p-4 bg-gray-100">
                <h2 class="text-xl">{{ collection.title }}</h2>
              </div>
            </div>
          </div>
          {%- else -%}

        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Template List Collection",
    "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Shop All"
    }
  ]
} 
{% endschema %}