<div class="flex items-center justify-center h-full px-6 py-12 md:px-4 lg:px-8">
  <div class="w-full max-w-md space-y-8">
    <div>
      <h1 class="mt-6 text-3xl font-bold text-center">Reset Password</h1>
    </div>
    <div class="mt-8">
      {%- form 'reset_customer_password' -%}
        {%- if form.errors -%}
          <div
            class="relative px-4 py-3 text-red-700 bg-red-100 border border-red-400 rounded"
            role="alert">
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {%- endif -%}
        <div class="my-2">
          <label class="sr-only" for="password">Password</label>
          <input
            autocomplete="new-password"
            class="relative block w-full px-3 py-2 border rounded"
            id="password"
            name="customer[password]"
            placeholder="password"
            type="password">
        </div>
        <div class="my-2">
          <label class="sr-only" for="password_confirmation">Confirm Password</label>
          <input
            autocomplete="confirm-password"
            class="relative block w-full px-3 py-2 border rounded"
            id="password_confirmation"
            name="customer[password_confirmation]"
            placeholder="confirm password"
            type="password">
        </div>
        <div>
          <button
            class="relative w-full px-4 py-2 text-sm font-medium text-white bg-gray-600 rounded hover:bg-gray-900"
            type="submit">Reset Password</button>
        </div>
      {%- endform -%}
    </div>
  </div>
</div>