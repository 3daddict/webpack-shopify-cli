<div class="px-4 py-8">
  <a href="{{ routes.collections_url }}" class="block my-4 text-base text-center text-gray-500 hover:underline">Go back to collections</a>
  {% paginate collection.products by section.settings.number_of_products_per_page %}
    <h1 class="text-3xl text-center">{{ collection.title }}</h1>
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 gap-4 md:grid-cols-3">
        {% for product in collection.products %}
          {%- render 'product-card', product: product -%}
        {%- else -%}
          <p>There are no products inside this collection</p>
        {% endfor %}
      </div>
    </div>
    {%- render 'pagination', pagination: paginate -%}
  {% endpaginate %}
</div>

{% schema %}
{
  "name": "template-collection",
  "settings": [
    {
    "type": "number",
    "id": "number_of_products_per_page",
    "default": 6,
    "label": "Number of products shown per page"
    }
  ]
} 
{% endschema %}