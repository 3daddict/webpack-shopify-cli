<div class="w-full px-3 py-6">
  <div class="overflow-hidden bg-white border rounded shadow">
    <a href="{{ product.url }}">
      <div class="overflow-hidden h-80">
        {%- if product.feature_image -%}
          <img class="object-cover w-full h-full transition duration-1000 ease-in-out transform hover:scale-105" src="{{ product.featured_image | image_url: width: '240' }}" alt="{{ product.featured_image.alt }}" width="{{ product.width }}" height="{{ product.height }}" loading="lazy" />
        {%- else -%}
          {{ 'product-1' | placeholder_svg_tag: 'object-cover w-full h-full bg-gray-100' }}
        {%- endif -%}
      </div>
    </a>
    <div class="flex flex-col p-4">
      <span class="text-sm text-gray-400">{{ product.vendor }}</span>
      <a class="font-medium text-gray-700 uppercase" href="{{ product.url }}">{{ product.title }}</a>
      <p class="text-gray-500">{{ product.price | money }}</p>
    </div>
  </div>
</div>