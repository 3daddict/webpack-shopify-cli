<div class="py-8">
  {% paginate blog.articles by section.settings.number_of_blog_posts %}
    <h1 class="text-3xl text-center">{{ blog.title }}</h1>
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 gap-4 md:grid-cols-3">
        {% for article in blog.articles %}
          <div class="w-full px-3 py-6">
            <div class="overflow-hidden bg-white">
              {%- if article.image -%}
                <a href="{{ article.url }}">
                  <img class="object-cover w-full rounded h-80" src="{{ article.image | img_url: 'medium' }}" alt="{{ article.image.alt }}" width="{{ article.image.width }}" height="{{ article.image.height }}" loading="lazy">
                </a>
              {%- else -%}
                <a href="{{ article.url }}">
                  {{ 'image' | placeholder_svg_tag: 'object-cover w-full h-80 bg-gray-100 rounded' }}
                </a>
              {%- endif -%}
              <div class="p-4">
                <h1 class="my-4 text-xl font-medium">{{ article.title }}</h1>
                {%- if article.excerpt.size > 0 -%}
                  <p>{{ article.excerpt | strip_html | truncatewords: 15 }}</p>
                {%- else -%}
                  <p>{{ article.content | strip_html | truncatewords: 15 }}</p>
                {%- endif -%}
                <a class="block my-4 font-medium text-blue-600 hover:text-blue-800" href="{{ article.url }}">{{ section.settings.blog_read_more }}</a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="mx-auto max-w-6xk">
      {% render 'pagination', pagination: paginate %}
    </div>
  {% endpaginate %}
</div>

{% schema %}
{
  "name": "Blog",
  "settings": [
    {
      "type": "range",
      "id": "number_of_blog_posts",
      "step": 1,
      "min": 1,
      "max": 20,
      "label": "Blog posts per page",
      "default": 10
    },
    {
      "type": "text",
      "id": "blog_read_more",
      "label": "Read More Label",
      "default": "Read more"
    }
  ]
} {% endschema %}